#!/bin/bash

set -e

DIR=$(readlink -f $1)
DATE=$(basename $DIR)
BENCH=$(basename $(dirname $DIR))
# LABEL=isaac-demo-$BENCH-$DATE

echo DIR=$DIR DATE=$DATE BENCH=$BENCH

# RUN=$DIR/run
# SESS=$DIR/sess
WORK=$DIR/work

FILTERED=${FILTERED:-0}

if [[ "$FILTERED" == 1 ]]
then
    INDEX_FILE=$WORK/filtered_index.yml
else
    INDEX_FILE=$WORK/combined_index.yml
fi

SORT_BY="prelim_score"


python3 -m isaac_toolkit.utils.sort_index $INDEX_FILE --inplace --by $SORT_BY

